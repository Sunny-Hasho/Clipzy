<Window x:Class="Clipzy.TrayMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TrayMenu" Height="Auto" Width="240"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" SizeToContent="Height"
        ShowActivated="False"
        Deactivated="Window_Deactivated" FontFamily="Neue Montreal, Segoe UI">
    <Window.Resources>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Border x:Name="Background" Background="#EEE" CornerRadius="10" Width="36" Height="20" HorizontalAlignment="Right">
                                <Ellipse x:Name="Thumb" Fill="White" Width="14" Height="14" HorizontalAlignment="Left" Margin="3">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#333"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="16" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" BorderThickness="1" BorderBrush="#EEE" Margin="10" Padding="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>
        <StackPanel>
            <!-- Hotkey Toggle -->
            <Button x:Name="BtnHotkey" Style="{StaticResource MenuItemStyle}" Click="BtnHotkey_Click">
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                        <TextBlock Text="Global Hotkey" FontWeight="SemiBold"/>
                        <TextBlock Text="Ctrl + Alt + V" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
                    </StackPanel>
                    <CheckBox x:Name="ChkHotkey" Style="{StaticResource ToggleSwitchStyle}" HorizontalAlignment="Right" IsHitTestVisible="False"/>
                </DockPanel>
            </Button>

            <!-- Context Menu Toggle -->
            <Button x:Name="BtnContextMenu" Style="{StaticResource MenuItemStyle}" Click="BtnContextMenu_Click">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Context Menu" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <CheckBox x:Name="ChkContextMenu" Style="{StaticResource ToggleSwitchStyle}" HorizontalAlignment="Right" IsHitTestVisible="False"/>
                </DockPanel>
            </Button>

            <Rectangle Height="1" Fill="#EEE" Margin="5,5"/>

            <Button Style="{StaticResource MenuItemStyle}" Click="BtnOpenFolder_Click">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="ðŸ“‚" Margin="0,0,10,0" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <TextBlock Text="Open Save Folder" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>

            <Rectangle Height="1" Fill="#EEE" Margin="5,5"/>
            
            <Button Style="{StaticResource MenuItemStyle}" Click="BtnExit_Click" Foreground="#D32F2F">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="âœ•" Margin="3,0,13,0" VerticalAlignment="Center" DockPanel.Dock="Left" FontWeight="Bold"/>
                    <TextBlock Text="Exit App" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>
        </StackPanel>
    </Border>
</Window>
